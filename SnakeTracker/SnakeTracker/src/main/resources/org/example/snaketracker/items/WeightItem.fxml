<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="90.0" prefWidth="400.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.snaketracker.WeightItemController">
    <Pane prefHeight="50.0" prefWidth="492.0">
        <children>
            <Label layoutX="6.0" layoutY="3.0" text="Letzter Gewichtseintrag:" />
            <Label fx:id="lastWeightDateLabel" alignment="TOP_LEFT" layoutX="160.0" layoutY="3.0" />
        </children>
    </Pane>
    <Pane layoutY="-5.0" prefHeight="50.0" prefWidth="400.0">
        <children>
            <Label layoutX="7.0" layoutY="-5.0" text="Gewicht (kg):" />
            <TextField fx:id="weightField" layoutX="160.0" layoutY="-5.0" prefHeight="25.0" prefWidth="91.0" />
        </children>
    </Pane>
    <Pane prefHeight="50.0" prefWidth="400.0">
        <children>
            <Button layoutX="287.0" layoutY="-7.0" onAction="#addWeightEntry" prefHeight="25.0" prefWidth="101.0" text="Gewicht eintragen" />
        </children>
    </Pane>
</VBox>
