<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="177.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.snaketracker.MealItemController">
   <Pane prefHeight="50.0" prefWidth="400.0">
      <children>
          <Label layoutX="8.0" layoutY="14.0" text="Letzte Mahlzeit:" />
          <Label fx:id="lastMealDateLabel" alignment="TOP_LEFT" layoutX="160.0" layoutY="14.0" />
      </children>
   </Pane>
   <Pane prefHeight="50.0" prefWidth="400.0">
      <children>
           <Label layoutX="8.0" layoutY="5.0" text="Futtertier:" />
           <TextField fx:id="foodTypeField" layoutX="160.0" layoutY="5.0" />
      </children>
   </Pane>
   <Pane prefHeight="50.0" prefWidth="400.0">
      <children>
           <Label layoutX="8.0" layoutY="5.0" text="Gefressen:" />
           <ComboBox fx:id="tookFoodComboBox" layoutX="160.0" layoutY="5.0" prefWidth="100.0" />
      </children>
   </Pane>
   <Pane prefHeight="50.0" prefWidth="400.0">
      <children>
           <Label layoutX="8.0" layoutY="5.0" text="Futtergwicht (g):" />
           <TextField fx:id="foodWeightField" layoutX="160.0" layoutY="5.0" />
      </children>
   </Pane>
   <Pane prefHeight="50.0" prefWidth="400.0">
      <children>
      
                      <Button layoutX="271.0" layoutY="2.0" onAction="#addMealEntry" text="Mahlzeit eintragen" />
      </children>
   </Pane>
</VBox>
