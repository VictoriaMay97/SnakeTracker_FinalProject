        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Button>
    <Label layoutX="260.0" layoutY="15.0" text="Name:">
        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Label>
    <TextField fx:id="nameField" layoutX="260.0" layoutY="35.0" prefWidth="200.0" />
    <Label layoutX="260.0" layoutY="70.0" text="Art:">
        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Label>
    <ComboBox fx:id="snakeTypeComboBox" layoutX="260.0" layoutY="90.0" prefWidth="200.0" />
