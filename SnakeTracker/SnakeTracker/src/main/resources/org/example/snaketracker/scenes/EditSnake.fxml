    </VBox>
    <Button fx:id="backButton" layoutX="26.0" layoutY="752.0" mnemonicParsing="false" onAction="#goBack" prefHeight="25.0" prefWidth="94.0" text="Zurück">
        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Button>
