            <Font name="Arial Bold" size="12.0" />
        </font>
    </Button>
    <Button fx:id="createPDFButton" layoutX="270.0" layoutY="752.0" mnemonicParsing="false" onAction="#createPDF" prefHeight="25.0" prefWidth="94.0" text="PDF erstellen">
        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Button>
    <Button fx:id="openMailButton" layoutX="229.0" layoutY="752.0" mnemonicParsing="false" onAction="#openDefaultMailApp" text="✉" textAlignment="CENTER">
        <font>
            <Font name="Arial Bold" size="12.0" />
        </font>
    </Button>
</AnchorPane>
